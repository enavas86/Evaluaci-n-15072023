@model List<ClienteModel>
@{
    ViewData["Title"] = "ListaCliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">
    <div class="card-header">
        <i class="bi bi-file-person"></i> Mantenimiento de Clientes
    </div>
    <div class="card-body">
        <a asp-action="GuardarCliente" asp-controller="Cliente" class="btn btn-success"><i class="bi bi-plus-circle"></i> Crear Nuevo</a>
        <hr />
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th></th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Edad</th>
                    <th>Fecha de Creación</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.PrimerNombre</td>
                        <td>@item.PrimerApellido</td>
                        <td>@item.Edad</td>
                        <td>@item.FechaCreacion.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a asp-action="EditarCliente" asp-controller="Cliente" class="btn btn-primary btn-sm" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Editar</a>
                            <a asp-action="EliminarCliente" asp-controller="Cliente" class="btn btn-danger btn-sm" asp-route-id="@item.Id"><i class="bi bi-x-square"></i> Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>