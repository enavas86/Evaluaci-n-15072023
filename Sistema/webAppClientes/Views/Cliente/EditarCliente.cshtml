@model ClienteModel
@{
    ViewData["Title"] = "EditarCliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">
    <div class="card-header">
        <i class="bi bi-pencil-fill"></i> Editar Cliente
    </div>
    <div class="card-body">
        <form asp-action="EditarCliente" asp-controller="Cliente" method="post">
            <input asp-for="Id" type="hidden" class="form-control">
            <div class="mb-3">
                <label for="nombreInput" class="form-label">Nombre del Cliente</label>
                <input asp-for="PrimerNombre" type="text" class="form-control" id="nombreInput">
                <span asp-validation-for="PrimerNombre" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="apellidoInput" class="form-label">Apellido del Cliente</label>
                <input asp-for="PrimerApellido" type="text" class="form-control" id="apellidoInput">
                <span asp-validation-for="PrimerApellido" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="edadInput" class="form-label">Edad del Cliente</label>
                <input asp-for="Edad" type="number" class="form-control" id="edadInput">
                <span asp-validation-for="Edad" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="fechaCreacionInput" class="form-label">Fecha de Creación</label>
                <input asp-for="FechaCreacion" type="date" class="form-control" id="fechaCreacionInput" disabled>
            </div>
            <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Guardar</button>
            <a asp-action="ListaCliente" asp-controller="Cliente" class="btn btn-warning"><i class="bi bi-skip-backward-btn"></i> Regresar</a>
        </form>
    </div>
</div>

