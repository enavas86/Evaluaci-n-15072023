@model ClienteModel
@{
    ViewData["Title"] = "EliminarCliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">
    <div class="card-header">
        <i class="bi bi-person-x-fill"></i> Eliminar Cliente
    </div>
    <div class="card-body">
        <form asp-action="EliminarCliente" asp-controller="Cliente" method="post">
            <input asp-for="Id" type="hidden" class="form-control">
            <div class="alert alert-danger" role="alert">
                ¿Desea eliminar al cliente: @Html.DisplayTextFor(m => m.PrimerNombre) @Html.DisplayTextFor(m => m.PrimerApellido)?
            </div>
            <button type="submit" class="btn btn-danger"><i class="bi bi-save"></i> Eliminar</button>
            <a asp-action="ListaCliente" asp-controller="Cliente" class="btn btn-warning"><i class="bi bi-skip-backward-btn"></i> Regresar</a>
        </form>
    </div>
</div>